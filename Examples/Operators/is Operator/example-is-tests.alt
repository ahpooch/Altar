{% endif %}

Test: sameas
{% set obj1 = [1, 2, 3] %}
{% set obj2 = obj1 %}
{% set obj3 = [1, 2, 3] %}
{% if obj1 is sameas(obj2) %}
obj1 and obj2 are the same object
{% endif %}
{% if obj1 is not sameas(obj3) %}
obj1 and obj3 are NOT the same object (different references)
{% endif %}
