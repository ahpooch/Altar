Test: divisibleby
{% set num = 15 %}
{% if num is divisibleby(3) %}
{{ num }} is divisible by 3
{% endif %}
{% if num is divisibleby(5) %}
{{ num }} is divisible by 5
{% endif %}
{% if num is not divisibleby(7) %}
{{ num }} is NOT divisible by 7
{% endif %}

Test: iterable
{% set items = [1, 2, 3] %}
{% set text = "hello" %}
{% set number = 42 %}
{% if items is iterable %}
items is iterable
{% endif %}
{% if text is not iterable %}
text is NOT iterable (strings are not considered iterable in this context)
{% endif %}
{% if number is not iterable %}
number is NOT iterable
{% endif %}

